<% if @user.errors.any? %>
  <% if @user.errors.count == 1 %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
  <% else%>
    <%= @user.errors.count %> errors prohibited this obj from being saved:
  <% end %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div>
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <p class="mt-2">Name</p>
          <%= f.text_field :name, autofocus: true %>
          <p class="mt-2">Image</p>
          <%= f.file_field :profile_image, accept: "image/*" %>
          <p class="mt-2">Introduction</p> 
          <%= f.text_area :introduction %>
          <p class="mt-2"><%= f.submit 'Update User', class: "btn btn-secondary" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
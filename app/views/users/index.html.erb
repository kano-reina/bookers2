<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <table>
    <tr><th>name</th><td><%= @user.name %></td></tr>
    <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
  </table>
</div>

<p><%= link_to "プロフィール更新(仮)", edit_user_path(@user) %></p>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
</div>

  <% if @book.errors.count == 1 %>
    <%= @book.errors.count %> error prohibited this obj from being saved:
  <% else%>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div>
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <p class="mt-2">Title</p>
          <%= f.text_field :title %>
          <p class="mt-2">Opinion</p>
          <%= f.text_area :body %>
          <p class="mt-2"><%= f.submit 'Update Book', class: "btn btn-success" %></p>
        <% end %>
      </div>
      
      <div>
          <p><%=link_to "Show", book_path(@book.id) %> | <%=link_to "Back", books_path %></p>
      </div>
    </div>
  </div>
</div>